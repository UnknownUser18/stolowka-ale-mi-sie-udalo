/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@pipes/*": [
        "src/app/pipes/*"
      ],
      "@services/*": [
        "src/app/services/*"
      ],
      "@components/*": [
        "src/app/components/*"
      ],
      "@database/*": [
        "src/app/services/database/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@utils/*": [
        "src/app/utils/*"
      ],
      "@environments/*": [
        "src/environments/*"
      ],
      "@modals/*": [
        "src/app/modals/*"
      ],
      "@directives/*": [
        "src/app/directives/*"
      ],
      "%switch": [
        "src/app/shared/switch/switch.ts"
      ],
      "%dropdown": [
        "src/app/shared/dropdown/dropdown.ts"
      ],
      "%checkbox": [
        "src/app/shared/checkbox/checkbox.ts"
      ],
      "%button-primary": [
        "src/app/shared/button-primary/button-primary.ts"
      ],
      "%button-secondary": [
        "src/app/shared/button-secondary/button-secondary.ts"
      ],
      "%button-default": [
        "src/app/shared/button-default/button-default.ts"
      ],
      "%primary-text": [
        "src/app/shared/primary-text/primary-text.ts"
      ],
      "%secondary-text": [
        "src/app/shared/secondary-text/secondary-text.ts"
      ]
    },
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022"
  },
  "stylePreprocessorOptions": {
    "includePaths": [
      "src/styles"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
